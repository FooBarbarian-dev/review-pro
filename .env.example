# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/secanalysis

# Redis
REDIS_URL=redis://localhost:6379/0

# Object Storage (S3/MinIO)
USE_S3=False
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_STORAGE_BUCKET_NAME=sarif-files
AWS_S3_REGION_NAME=us-east-1
AWS_S3_ENDPOINT_URL=http://localhost:9000
SARIF_BUCKET_NAME=sarif-files

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# GitHub App (for worker tokens)
GITHUB_APP_ID=your-github-app-id
GITHUB_APP_PRIVATE_KEY=your-github-app-private-key
GITHUB_APP_INSTALLATION_ID=your-installation-id

# Worker Configuration
WORKER_DOCKER_IMAGE=security-worker:latest
WORKER_TIMEOUT=1800
WORKER_MEMORY_LIMIT=2g
WORKER_CPU_LIMIT=2

# Quotas
DEFAULT_SCAN_QUOTA=100
DEFAULT_STORAGE_QUOTA=10

# Logging
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
DB_LOG_LEVEL=WARNING

# Sentry (Optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Email (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
DEFAULT_FROM_EMAIL=noreply@secanalysis.example.com
