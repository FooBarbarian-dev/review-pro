[run]
source = apps, workflows, services, api
omit =
    */migrations/*
    */tests/*
    */test_*.py
    */__init__.py
    */apps.py
    */admin.py
    */management/commands/*
    */conftest.py
    */config/wsgi.py
    */config/asgi.py
branch = True

[report]
precision = 2
show_missing = True
skip_covered = False
exclude_lines =
    # Standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code
    def __repr__
    def __str__

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:

    # Don't complain about abstract methods
    @abstractmethod
    @abc.abstractmethod

    # Don't complain about pass statements
    pass

[html]
directory = htmlcov
title = Review Pro Test Coverage Report
